{
    "tasks": [
        {
            "type":"shell",
            "label": "Build",
            "command": "make all; mkdir -p ~/mnt/fuse_fs",
            "problemMatcher": {
                "base": "$gcc",
            }
        },
        {
            "type":"shell",
            "label": "Force Rebuild",
            "command": "make -B all",
            "problemMatcher": {
                "base": "$gcc",
            }
        },
        {
            "type":"shell",
            "label": "Umount FUSE and Delete Disk Image",
            "command": "fusermount -u ~/mnt/fuse_fs"
        }
    ],
    "version": "2.0.0"
}