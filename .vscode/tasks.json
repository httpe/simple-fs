{
    "tasks": [
        {
            "type":"shell",
            "label": "Build",
            "command": "make all; mkdir -p mnt",
            "problemMatcher": {
                "base": "$gcc",
            }
        },
        {
            "type":"shell",
            "label": "Force Rebuild FAT",
            "command": "make -B fat",
            "problemMatcher": {
                "base": "$gcc",
            }
        },
        {
            "type":"shell",
            "label": "Umount FUSE and Delete Disk Image",
            "command": "fusermount -u ~/mnt/myfat; rm -f simple_fs_image.bin"
        }
    ],
    "version": "2.0.0"
}