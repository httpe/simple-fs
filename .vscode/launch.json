    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FUSE",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fuse_fs",
            "args": [
                "-d",
                "-s",
                "--make_fs",
                "${env:HOME}/mnt/fuse_fs",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "postDebugTask": "Umount FUSE",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug VFS",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/vfs",
            "args": [
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "postDebugTask": "Delete VFS Image",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}